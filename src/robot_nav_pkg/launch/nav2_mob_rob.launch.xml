<launch>
    <let name="urdf_path" value="$(find-pkg-share mob_rob_description)/urdf/lv3_mob_rob.urdf" />
    <let name="gazebo_config_path" value="$(find-pkg-share robot_nav_pkg)/config/gz_bridge.yaml" />
    <let name="gazebo_world_path" value="$(find-pkg-share robot_nav_pkg)/worlds/depot.sdf" />
    <let name="map_path" value="$(find-pkg-share robot_nav_pkg)/maps/depot.yaml" />
    <let name="nav2_config_path" value="$(find-pkg-share robot_nav_pkg)/config/nav2_params.yaml" />
    <let name="rviz_config_path" value="$(find-pkg-share robot_nav_pkg)/rviz/navigation.rviz" />

    <node pkg="robot_state_publisher" exec="robot_state_publisher">
        <param name="robot_description" value="$(command 'cat $(var urdf_path)')" />
        <param name="use_sim_time" value="True" />
    </node>

    <node pkg="nav2_map_server" exec="map_server" name="map_server" respawn="True" respawn_delay="2.0">
        <param from="$(var nav2_config_path)" />
        <param name="yaml_filename" value="$(var map_path)" />
        <param name="use_sim_time" value="True" />
    </node>

    <node pkg="nav2_amcl" exec="amcl" name="amcl" respawn="True" respawn_delay="2.0">
        <param from="$(var nav2_config_path)" />
        <param name="use_sim_time" value="True" />
    </node>

    <node pkg="nav2_controller" exec="controller_server" respawn="True" respawn_delay="2.0">
        <param from="$(var nav2_config_path)" />
        <param name="use_sim_time" value="True" />
    </node>

    <node pkg="nav2_planner" exec="planner_server" name="planner_server" respawn="True" respawn_delay="2.0">
        <param from="$(var nav2_config_path)" />
        <param name="use_sim_time" value="True" />
    </node>

    <node pkg="nav2_behaviors" exec="behavior_server" name="behavior_server" respawn="True" respawn_delay="2.0">
        <param from="$(var nav2_config_path)" />
        <param name="use_sim_time" value="True" />
    </node>

    <node pkg="nav2_bt_navigator" exec="bt_navigator" name="bt_navigator" respawn="True" respawn_delay="2.0">
        <param from="$(var nav2_config_path)" />
        <param name="use_sim_time" value="True" />
    </node>

    <node pkg="nav2_waypoint_follower" exec="waypoint_follower" name="waypoint_follower" respawn="True" respawn_delay="2.0">
        <param from="$(var nav2_config_path)" />
        <param name="use_sim_time" value="True" />
    </node>

    <node pkg="nav2_lifecycle_manager" exec="lifecycle_manager" name="lifecycle_manager" respawn="True" respawn_delay="2.0">
        <param from="$(var nav2_config_path)" />
        <param name="use_sim_time" value="True" />
        <param name="autostart" value="True" />
    </node>

    <include file="$(find-pkg-share ros_gz_sim)/launch/gz_sim.launch.py">
        <arg name="gz_args" value="$(var gazebo_world_path) -r" />
    </include>

    <node pkg="ros_gz_sim" exec="create" args="-topic robot_description -x -8.00 -y 0.00 -z 0.26">
        <param name="use_sim_time" value="True" />
    </node>

    <node pkg="ros_gz_bridge" exec="parameter_bridge">
        <param name="config_file" value="$(var gazebo_config_path)" />
        <param name="use_sim_time" value="True" />
    </node>

    <node pkg="rviz2" exec="rviz2" args="-d $(var rviz_config_path)">
        <param name="use_sim_time" value="True" />
    </node>

    <node pkg="robot_nav_pkg" exec="goal_manager" name="goal_manager" output="screen">
        <param name="use_sim_time" value="True" />
    </node>

    <node pkg="robot_nav_pkg" exec="current_point_manager" name="current_point_manager" output="screen">
        <param name="use_sim_time" value="True" />
    </node>
</launch>