<launch>
    <let name="urdf_path" value="$(find-pkg-share mob_rob_description)/urdf/lv4_mob_rob.urdf" />
    <let name="gazebo_config_path" value="$(find-pkg-share lv4_mob_rob_navigation)/config/gz_bridge.yaml" />
    <let name="world_path" value="$(find-pkg-share lv4_mob_rob_navigation)/world/depot.sdf" />

    <node pkg="robot_state_publisher" exec="robot_state_publisher">
        <param name="robot_description" value="$(command 'cat $(var urdf_path)')" />
        <param name="use_sim_time" value="true" />
    </node>

    <include file="$(find-pkg-share ros_gz_sim)/launch/gz_sim.launch.py">
        <arg name="gz_args" value="-r $(var world_path)" />
    </include>

    <node pkg="ros_gz_sim" exec="create" args="-topic robot_description -name mob_rob -z 0.1" />

    <node pkg="ros_gz_bridge" exec="parameter_bridge">
        <param name="config_file" value="$(var gazebo_config_path)" />
        <param name="use_sim_time" value="true" />
    </node>

    #---Zad 3, 1--- 
    <node pkg="lv4_mob_rob_navigation" exec="obstacle_detector" name="obstacle_detector" output="screen">
        <param name="stop_distance" value="0.7"/>
        <param name="use_sim_time" value="true" />
    </node>

    #---Zad 3, 2---
    <node pkg="lv4_mob_rob_navigation" exec="navigator" name="navigator" output="screen">
        <param name="use_sim_time" value="true" />
    </node>

    <node pkg="rviz2" exec="rviz2" />
</launch>