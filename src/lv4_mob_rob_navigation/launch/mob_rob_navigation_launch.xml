<launch>
    <!-- URDF i Gazebo konfiguracija -->
    <let name="urdf_path"
        value="$(find-pkg-share mob_rob_description)/urdf/lv4_mob_rob.urdf" />
    <let name="gazebo_config_path"
        value="$(find-pkg-share lv4_mob_rob_navigation)/config/gz_bridge.yaml" />

    <!-- Robot state publisher -->
    <node pkg="robot_state_publisher" exec="robot_state_publisher">
        <param name="robot_description" value="$(command 'cat $(var urdf_path)')" />
    </node>

    <!-- Pokretanje Gazebo simulacije -->
    <include file="$(find-pkg-share ros_gz_sim)/launch/gz_sim.launch.py">
        <arg name="gz_args" value="empty.sdf -r" />
    </include>
    <node pkg="ros_gz_sim" exec="create" args="-topic robot_description" />
    <node pkg="ros_gz_bridge" exec="parameter_bridge">
        <param name="config_file" value="$(var gazebo_config_path)" />
    </node>

    <!-- Obstacle detector Ävor -->
    <node pkg="lv4_mob_rob_navigation" exec="obstacle_detector" name="obstacle_detector" output="screen">
        <param name="stop_distance" value="0.7"/>
    </node>

    <!-- Navigator akcijski server -->
    <node pkg="lv4_mob_rob_navigation" exec="navigator" name="navigator" output="screen"/>

    <!-- Radi bez ovoga -->
    <node pkg="lv4_mob_rob_navigation" exec="keyboard_navigation" name="keyboard_navigation" output="screen"/>

    <!-- RViz -->
    <node pkg="rviz2" exec="rviz2" args="" />
</launch>
